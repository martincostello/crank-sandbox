{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch CrankSandbox",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/CrankSandbox/bin/Debug/net6.0/CrankSandbox.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/CrankSandbox",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "${env:CODESPACES}"
      }
    }
  ]
}
